@model Helga_ProiectMPA.Models.Playlist

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Playlist</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orderings)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Buyer</th>
                    <th>Ordering Date</th>
                </tr>
                @foreach (var item in Model.Orderings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Buyer.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderingDate)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
